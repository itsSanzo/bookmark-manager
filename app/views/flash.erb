<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
 
<% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, there were some problems with the form:
    <ul class="errors">
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul> 
<% end %>